<Window x:Class="RegistroDetalle_AP1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegistroDetalle_AP1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Menu>
                <MenuItem Header="Registro">
                    <MenuItem x:Name="rOrdenesMenuItem" Header="Registro de Ordenes" Click="rOrdenesMenuItem_Click"/>
                    <MenuItem x:Name="rArticulosMenuItem" Header="Registro de Artículos" Click="rArticulosMenuItem_Click"/>
                </MenuItem>
                
                <MenuItem Header="Consulta">
                    <MenuItem x:Name="cOrdenesMenuItem" Header="Consulta de Ordenes"/>
                </MenuItem>
               
                <MenuItem Header="Ayuda."> 
                    <Menu/>              
                </MenuItem>
            </Menu>
        </StackPanel>
    </Grid>
</Window>
